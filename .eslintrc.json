{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "process": "readonly"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "arrow-parens": ["error", "as-needed"]
      }
    ],
    "indent": ["error",2,{"SwitchCase": 1}
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "arrow-parens": ["error", "as-needed"]
  }
}